<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.gmt.myschool.ui.expandable.layout.ExpandableLayout
                android:id="@+id/admission_fee_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_green_selector"
                expandable:el_contentLayout="@layout/fd_admission_fee_content"
                expandable:el_headerLayout="@layout/fd_admission_fee_header" />

            <com.gmt.myschool.ui.expandable.layout.ExpandableLayout
                android:id="@+id/balance_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_green_selector"
                expandable:el_contentLayout="@layout/fd_balance_fee_content"
                expandable:el_headerLayout="@layout/fd_balance_fee_header" />

            <com.gmt.myschool.ui.expandable.layout.ExpandableLayout
                android:id="@+id/payment_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_green_selector"
                expandable:el_contentLayout="@layout/fd_payment_history_content"
                expandable:el_headerLayout="@layout/fd_payment_history_header" />


            <Button
                android:id="@+id/pay_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_green_selector"
                android:padding="10dp"
                android:text="PAY ONLINE"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>