<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@drawable/button_green_selector"
        android:padding="10dp"
        android:text="Update"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/signup_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/update"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:id="@+id/relative_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoview"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.gmt.myschool.ui.CircularImageView
                    android:id="@+id/student_profile_pic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/profile_pic"
                    app:civ_border="true"
                    app:civ_borderColor="#FFFFFFFF"
                    app:civ_borderWidth="4dp"
                    app:civ_selector="true"
                    app:civ_selectorColor="#4403a9f4"
                    app:civ_selectorStrokeColor="#aa5677fc"
                    app:civ_selectorStrokeWidth="4dp"
                    app:civ_shadow="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Student ID        :   "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#424242"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/roll_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="Noby"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#424242" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Student Name : "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#424242"
                        android:textStyle="italic" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/student_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:gravity="left|center_vertical"
                        android:hint="Name"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        app:met_baseColor="@color/black"
                        app:met_bottomTextSize="@dimen/error_size"
                        app:met_errorColor="@color/edittext_error"
                        app:met_floatingLabelPadding="@dimen/floating_padding"
                        app:met_primaryColor="@color/grey_text"
                        app:met_singleLineEllipsis="true"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/edit_text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Student Class : "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#424242"
                        android:textStyle="italic" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/student_class"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:gravity="left|center_vertical"
                        android:hint="Student Class"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        app:met_baseColor="@color/black"
                        app:met_bottomTextSize="@dimen/error_size"
                        app:met_errorColor="@color/edittext_error"
                        app:met_floatingLabelPadding="@dimen/floating_padding"
                        app:met_primaryColor="@color/grey_text"
                        app:met_singleLineEllipsis="true"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/edit_text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Parent Name : "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#424242"
                        android:textStyle="italic" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/parent_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:gravity="left|center_vertical"
                        android:hint="Parent Name"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        app:met_baseColor="@color/black"
                        app:met_bottomTextSize="@dimen/error_size"
                        app:met_errorColor="@color/edittext_error"
                        app:met_floatingLabelPadding="@dimen/floating_padding"
                        app:met_primaryColor="@color/grey_text"
                        app:met_singleLineEllipsis="true"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/edit_text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Parent Phone : "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#424242"
                        android:textStyle="italic" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/parent_phone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:gravity="left|center_vertical"
                        android:hint="Prent Mobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="10dp"
                        app:met_baseColor="@color/black"
                        app:met_bottomTextSize="@dimen/error_size"
                        app:met_errorColor="@color/edittext_error"
                        app:met_floatingLabelPadding="@dimen/floating_padding"
                        app:met_primaryColor="@color/grey_text"
                        app:met_singleLineEllipsis="true"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/edit_text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Parent Address : "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#424242"
                        android:textStyle="italic" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/parent_address"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="left|center_vertical"
                        android:hint="Parent Address"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        app:met_baseColor="@color/black"
                        app:met_bottomTextSize="@dimen/error_size"
                        app:met_errorColor="@color/edittext_error"
                        app:met_floatingLabelPadding="@dimen/floating_padding"
                        app:met_primaryColor="@color/grey_text"
                        app:met_singleLineEllipsis="false"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/edit_text_grey" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>